{
  "name": "paymaster-integration",
  "version": "0.1.0",
  "private": true,
  "description": "Integration tests for UniswapPaymaster",
  "license": "MIT",
  "author": "gonzaotc",
  "scripts": {
    "build": "cd ../contracts && forge build && cd ../sdk && npm run build && cd ../integration",
    "test": "hardhat test",
    "test:watch": "hardhat watch test",
    "compile": "hardhat compile",
    "clean": "hardhat clean && cd ../contracts && forge clean",
    "node": "hardhat node",
    "lint": "prettier --write test/ scripts/ && eslint test/ scripts/",
    "deploy-paymaster": "hardhat run scripts/deployPaymaster.ts",
    "deploy-oracle": "hardhat run scripts/deployOracle.ts",
    "deploy-erc20": "hardhat run scripts/deployERC20.ts",
    "mint-erc20": "hardhat run scripts/mintERC20.ts",
    "create-pool": "hardhat run scripts/createPool.ts",
    "deposit": "hardhat run scripts/deposit.ts",
    "withdraw": "hardhat run scripts/withdraw.ts",
    "rebalance": "hardhat run scripts/rebalance.ts",
    "query-pool": "hardhat run scripts/queryPool.ts",
    "query-oracle": "hardhat run scripts/queryOracle.ts",
    "delegate": "hardhat run scripts/delegate.ts",
    "approve": "hardhat run scripts/approve.ts",
    "verify-approval": "hardhat run scripts/verifyApproval.ts",
    "send-user-op": "hardhat run scripts/sendUserOp.ts",
    "send-sponsored-user-op": "hardhat run scripts/sendSponsoredUserOp.ts"
  },
  "dependencies": {
    "paymaster-sdk": "workspace:*"
  },
  "overrides": {
    "viem": "$viem"
  },
  "devDependencies": {
    "dotenv": "^17.2.3",
    "@eslint/js": "^9.38.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
    "@nomicfoundation/hardhat-viem": "^2.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "chai": "^4.3.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "hardhat": "^2.22.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.0",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.46.2",
    "viem": "^2.38.5"
  }
}
